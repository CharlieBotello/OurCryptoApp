<% if user_signed_in? %> 
  <% redirect_to edit_user_registration_path %>
<% else %>


<% @coins %>

<div align="center" class="jumbotron">
  <h2>Build your own Crypto Portfolio!</h2>
  <h4>Keep track of your cryptos value and status</h4>

  <br/><br/>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Symbol</th>
          <th>Rank </th>
          <th>Current Value</th>
          <th>Market Cap %</th>
          <th>Value to Bitcoin </th>
        </tr>
      </thead>
      <tbody>
          <% for x in @coins %>
            <% for coin in @my_coins %>
              <% if coin == x["symbol"] %>
              <tr>
                <td><%= x["name"] %></td>
                <td><%= x["symbol"] %></td>
                <td><%= x["rank"] %></td>
                <td>$<%= x["price_usd"] %></td>
                <td>$<%= x["market_cap_usd"] %></td>
                <td><%= x["price_btc"] %></td>
                </tr>
              <% end %>
            <% end %>
          <% end %>  
      </tbody>
    </table>

  <br/><br/>

  <div>
  <%= link_to "Sign up", new_user_registration_path, class: "btn btn-default btn-lg" %>
  <%= link_to "Login", new_user_session_path, class: "btn btn-default btn-lg" %>
  </div>
</div>
<% end %>


